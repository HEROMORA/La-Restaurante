<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          styleClass="root">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <Label fx:id="welcomeLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" />

    <Label id="orderDetails-label"  text="Tables Order's For Today" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <TableView fx:id="reservationTableView" id="reservationTableView" prefWidth="1000"
               GridPane.columnIndex="0" GridPane.columnSpan="5"
               GridPane.rowIndex="2" GridPane.rowSpan="5" >
        <columns>
            <TableColumn text="Table Number">
                <cellValueFactory>
                    <PropertyValueFactory property="tableNum" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="From">
                <cellValueFactory>
                    <PropertyValueFactory property="reservationDate" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="To">
                <cellValueFactory>
                    <PropertyValueFactory property="endReservationDate" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <Label id="orderDetails-label" text="Table Ordered Dishes" GridPane.rowIndex="7" GridPane.columnIndex="0" />

    <TableView fx:id="ordersTableView" id="reservationTableView" prefWidth="1000"
               GridPane.columnIndex="0" GridPane.columnSpan="5"
               GridPane.rowIndex="8" GridPane.rowSpan="3" >
        <columns>
            <TableColumn text="Dish Name">
                <cellValueFactory>
                    <PropertyValueFactory property="dishName" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Dish Type">
                <cellValueFactory>
                    <PropertyValueFactory property="dishType" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Quantity">
                <cellValueFactory>
                    <PropertyValueFactory property="quantity" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <stylesheets>
        <URL value="@../styles/CookDashboardPageStyleSheet.css" />
    </stylesheets>

</GridPane>
