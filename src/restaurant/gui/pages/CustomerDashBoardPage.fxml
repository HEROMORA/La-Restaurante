<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.collections.FXCollections?>
<?import java.net.URL?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          styleClass="root">

    <Text  fx:id="welcomeLabel" text="Welcome Customer" GridPane.halignment="CENTER"
            GridPane.columnIndex="0" GridPane.rowIndex="0"
            GridPane.columnSpan="5"/>

    <Label text="Select number of persons"
          GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <ComboBox fx:id="numberOfSeatsComboBox" value="1"
              GridPane.columnIndex="1" GridPane.rowIndex="1">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <Integer fx:value="1"/>
                <Integer fx:value="2"/>
                <Integer fx:value="3"/>
                <Integer fx:value="4"/>
                <Integer fx:value="5"/>
                <Integer fx:value="6"/>
                <Integer fx:value="7"/>
                <Integer fx:value="8"/>
                <Integer fx:value="9"/>
                <Integer fx:value="10"/>
                <Integer fx:value="11"/>
                <Integer fx:value="12"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Label text="Date:"
           GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <DatePicker fx:id="datePicker" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

    <Label text="from:"
          GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <ComboBox fx:id="fromHoursComboBox" value="HH"
        GridPane.columnIndex="1" GridPane.rowIndex="3">

        <items>
            <FXCollections fx:factory="observableArrayList">
                <Integer fx:value="1"/>
                <Integer fx:value="2"/>
                <Integer fx:value="3"/>
                <Integer fx:value="4"/>
                <Integer fx:value="5"/>
                <Integer fx:value="6"/>
                <Integer fx:value="7"/>
                <Integer fx:value="8"/>
                <Integer fx:value="9"/>
                <Integer fx:value="10"/>
                <Integer fx:value="11"/>
                <Integer fx:value="12"/>
            </FXCollections>
        </items>
    </ComboBox>

    <ComboBox fx:id="fromMinsComboBox" value="MM"
              GridPane.columnIndex="2" GridPane.rowIndex="3">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <Integer fx:value="0"/>
                <Integer fx:value="15"/>
                <Integer fx:value="30"/>
                <Integer fx:value="45"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Label text="to:"
          GridPane.columnIndex="3" GridPane.rowIndex="2"/>

    <ComboBox fx:id="toHoursComboBox" value="HH"
              GridPane.columnIndex="3" GridPane.rowIndex="3">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <Integer fx:value="1"/>
                <Integer fx:value="2"/>
                <Integer fx:value="3"/>
                <Integer fx:value="4"/>
                <Integer fx:value="5"/>
                <Integer fx:value="6"/>
                <Integer fx:value="7"/>
                <Integer fx:value="8"/>
                <Integer fx:value="9"/>
                <Integer fx:value="10"/>
                <Integer fx:value="11"/>
                <Integer fx:value="12"/>
            </FXCollections>
        </items>
    </ComboBox>

    <ComboBox fx:id="toMinsComboBox" value="MM"
              GridPane.columnIndex="4" GridPane.rowIndex="3">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <Integer fx:value="0"/>
                <Integer fx:value="15"/>
                <Integer fx:value="30"/>
                <Integer fx:value="45"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Button fx:id="smokingBtn" text="SMOKING"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            onAction="#handleOnSmokingBtnClick"/>

    <Button fx:id="nonSmokingBtn" text="NON-SMOKING"
            GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="2"
            onAction="#handleOnNonSmokingBtnClick" />

    <Button fx:id="reserveBtn" text="Reserve"
            GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="2"
            onAction="#handleSubmitActionButton"/>
    <stylesheets>
        <URL value="@../styles/CustomerDashBoardStyleSheet.css" />
    </stylesheets>
</GridPane>
