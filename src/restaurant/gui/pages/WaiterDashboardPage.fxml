<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import java.net.URL?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<GridPane fx:controller="restaurant.gui.pages.WaiterDashboardController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          styleClass="root" prefWidth="1200" prefHeight="700">

    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <Label id="#welcome-text" fx:id="welcomeLabel"
            text="Hello, Waiter!" />

    <ListView id="#reservations-listview" fx:id="reservationsListView"
        GridPane.rowIndex="0" GridPane.columnIndex="0"
        GridPane.rowSpan="5"/>

    <stylesheets>
        <URL value="@../styles/WaiterDashboardPageStyleSheet.css" />
    </stylesheets>
</GridPane>
