<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import java.net.URL?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<GridPane fx:id="root"
          xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10"
          styleClass="root" prefWidth="1200" prefHeight="700">

    <padding><Insets top="80" right="25" bottom="10" left="175"/></padding>

    <Label id="#welcome-text" fx:id="welcomeLabel"
            text="Hello, Waiter!"
            GridPane.columnIndex="0" GridPane.rowIndex="20" GridPane.columnSpan="2"
    />

    <ListView id="#reservations-listview" fx:id="reservationsListView"
        GridPane.rowIndex="0" GridPane.columnIndex="0"
        GridPane.rowSpan="4" GridPane.columnSpan="3" prefWidth="320" prefHeight="325"/>

    <stylesheets>
        <URL value="@../styles/WaiterDashboardPageStyleSheet.css" />
    </stylesheets>
</GridPane>
